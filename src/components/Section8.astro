---
import { Image } from "astro:assets";
import Bubble from "@/assets/bubble.png";

import Discord from "@/assets/socials/discord.svg";
import Telegram from "@/assets/socials/telegram.svg";
import X from "@/assets/socials/x.svg";
import Github from "@/assets/socials/github.svg";
---

<footer
    class="bg-[#212121] flex justify-center items-center px-[14px] lg:px-8 pb-[14px] pt-[176px] md:pt-[88px] lg:pt-[71px] relative mt-[166px] w-full mx-auto"
>
    <div class="max-w-[1200px]">
        <Image
            src={Bubble}
            alt="Bubble"
            class="w-[332px] lg:w-[406px] h-[332px] lg:h-[410px] absolute left-1/2 right-1/2 -translate-x-1/2 -translate-y-1/2 top-0 lg:top-20 md:-translate-x-[95%] md:left-[95%]"
        />
        <div class="w-full md:w-1/2">
            <span
                class="font-work text-[32px] lg:text-[46px] lg:text-nowrap -tracking-[0.64px] leading-[110%] font-medium text-white uppercase"
                >Ready to Build the Future?</span
            >
            <span
                class="font-work text-[24px] -tracking-[0.48px] leading-[110%] font-normal text-white mt-4 block"
                >Join the Cytonic ecosystem and start building the next
                generation of blockchain applications</span
            >
        </div>
        <div class="mt-10 lg:mt-[46px] flex flex-row gap-2">
            <button
                class="bg-[#000000] whitespace-nowrap text-white font-work text-[18px] font-[600] -tracking-[0.36px] leading-[120%] px-6 py-3 rounded-lg w-full lg:w-fit h-[54px]"
                onclick="window.location.href='https://cytonic.com/join'"
            >
                Build manually
            </button>
            <button
                class="bg-[#FFFFFF] whitespace-nowrap text-black font-work text-[18px] font-[600] -tracking-[0.36px] leading-[120%] px-6 py-3 rounded-lg w-full lg:w-fit h-[54px]"
                onclick="window.location.href='https://cytonic.com/docs'"
            >
                Join waitlist
            </button>
        </div>
        <div
            class="mt-20 lg:mt-[180px] grid grid-cols-2 md:grid-cols-4 grid-rows-2 md:grid-rows-1 place-content-between gap-y-10"
        >
            <!-- platform -->
            <div class="flex flex-col gap-8">
                <span
                    class="font-work text-white text-2xl -tracking-[0.48px] leading-[110%] font-medium uppercase"
                    >Platform</span
                >
                <div class="flex flex-col gap-4">
                    <a
                        href="https://cytonic.com/docs"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >SuperAgent</a
                    >
                    <a
                        href="https://cytonic.com/blog"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Network</a
                    >
                    <a
                        href="https://cytonic.com/roadmap"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Testnet</a
                    >
                    <a
                        href="https://cytonic.com/faq"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Roadmap</a
                    >
                </div>
            </div>
            <!-- resource -->
            <div class="flex flex-col gap-8">
                <span
                    class="font-work text-white text-2xl -tracking-[0.48px] leading-[110%] font-medium uppercase"
                    >Resource</span
                >
                <div class="flex flex-col gap-4">
                    <a
                        href="https://cytonic.com/docs"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Documentation</a
                    >
                    <a
                        href="https://cytonic.com/blog"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >API Reference</a
                    >
                    <a
                        href="https://cytonic.com/roadmap"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Tutorials</a
                    >
                    <a
                        href="https://cytonic.com/faq"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Blog</a
                    >
                </div>
            </div>
            <!-- community -->
            <div class="flex flex-col gap-8">
                <span
                    class="font-work text-white text-2xl -tracking-[0.48px] leading-[110%] font-medium uppercase"
                    >Community</span
                >
                <div class="flex flex-col gap-4">
                    <a
                        href="https://cytonic.com/docs"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Discord</a
                    >
                    <a
                        href="https://cytonic.com/blog"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Twitter</a
                    >
                    <a
                        href="https://cytonic.com/roadmap"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Github</a
                    >
                    <a
                        href="https://cytonic.com/faq"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Forum</a
                    >
                </div>
            </div>
            <!-- company -->
            <div class="flex flex-col gap-8">
                <span
                    class="font-work text-white text-2xl -tracking-[0.48px] leading-[110%] font-medium uppercase"
                    >Company</span
                >
                <div class="flex flex-col gap-4">
                    <a
                        href="https://cytonic.com/docs"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >About</a
                    >
                    <a
                        href="https://cytonic.com/blog"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Careers</a
                    >
                    <a
                        href="https://cytonic.com/roadmap"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Privacy</a
                    >
                    <a
                        href="https://cytonic.com/faq"
                        class="text-[#939393] text-lg -tracking-[0.32px] leading-[120%] font-medium hover:text-white transition-colors"
                        >Terms</a
                    >
                </div>
            </div>
        </div>
        <div
            class="mt-24 grid grid-cols-1 grid-rows-2 md:grid-cols-2 md:grid-rows-1 gap-4 items-center"
        >
            <div
                class="flex flex-row justify-between md:order-2 md:w-fit gap-2 md:ml-auto"
            >
                <Github
                    class="w-10 h-10 fill-white hover:fill-[#939393] transition-colors"
                    onclick="window.location.href='https://github.com/cytonic'"
                />
                <Discord
                    class="w-10 h-10 fill-white hover:fill-[#939393] transition-colors"
                    onclick="window.location.href='https://discord.gg/cytonic'"
                />
                <Telegram
                    class="w-10 h-10 fill-white hover:fill-[#939393] transition-colors"
                    onclick="window.location.href='https://t.me/cytonic'"
                />
                <X
                    class="w-10 h-10 fill-white hover:fill-[#939393] transition-colors"
                    onclick="window.location.href='https://x.com/cytonic'"
                />
            </div>
            <span
                class="font-work text-[#939393] text-[18px] -tracking-[0.36px] leading-[120%] font-medium md:order-1"
            >
                Â© 2025 Cytonic. All rights reserved</span
            >
        </div>
    </div>
</footer>
