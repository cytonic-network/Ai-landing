---
import Arrow from "../../public/icons/arrow.svg";
import Clock from "../../public/icons/clock.svg";
import Paperclip from "../../public/icons/paperclip.svg";
import Image from "../../public/icons/image.svg";
---

<div
    class="h-[700px] lg:h-[835px] bg-main-gray relative py-6 lg:py-0 lg:px-10 flex justify-center mb-[141px] lg:mb-[460px]"
>
    <img
        src="/src/assets/bubble.png"
        class="lg:opacity-60 absolute left-1/2 -translate-x-1/2 top-[200px] w-[300px] h-[300px] lg:top-[50px] lg:w-[600px] lg:h-[600px]"
    />
    <div class="z-10 relative lg:pt-[240px] w-full lg:w-fit lg:min-w-[1120px]">
        <div
            class="md:px-4 flex flex-col lg:flex-row lg:items-end h-full lg:h-fit justify-between"
        >
            <div
                class="pl-6 md:pl-0 text-white font-medium flex flex-col gap-4 md:gap-0"
            >
                <span
                    class="text-[32px] md:text-[46px] leading-[110%] md:leading-[120%]"
                    >CREATOR LAYER-1<br class="md:hidden" /> BLOCKCHAIN</span
                >
                <span
                    class="text-[#939393] md:text-white text-[24px] md:text-[46px] leading-[110%] md:uppercase"
                    >Build fullstack dApps <br />with Cytonic AI</span
                >
            </div>

            <div class="px-4 md:px-0 gap-2 lg:gap-4 flex">
                <button
                    type="button"
                    class="w-full whitespace-nowrap lg:w-fit text-[18px] font-semibold bg-black text-white px-6 h-[54px] rounded-[8px] tracking-normal cursor-pointer"
                    >Build manually</button
                >
                <button
                    type="button"
                    class="w-full whitespace-nowrap lg:w-fit text-[18px] font-semibold bg-white px-6 h-[54px] rounded-[8px] tracking-normal cursor-pointer"
                    >Join waitlist</button
                >
            </div>
        </div>

        <div
            class="bg-white w-[1120px] h-[603px] mt-8 rounded-[24px] border-light-gray border-1 overflow-hidden hidden lg:block"
        >
            <div
                class="bg-[#F5F5F5] h-[114px] pt-6 px-8 pb-4 flex gap-4 flex-col"
            >
                <div class="flex gap-[11px]">
                    <div class="w-[14px] h-[14px] rounded-full bg-[#FF514F]">
                    </div>
                    <div class="w-[14px] h-[14px] rounded-full bg-[#FFBA00]">
                    </div>
                    <div class="w-[14px] h-[14px] rounded-full bg-[#00CF1B]">
                    </div>
                </div>

                <div class="flex gap-2 w-full">
                    <div
                        class="bg-white border-light-gray border-1 rounded-[8px] w-11 h-11 flex items-center justify-center"
                    >
                        <Arrow />
                    </div>
                    <div
                        class="bg-white text-left border-light-gray border-1 rounded-[8px] w-full h-11 flex items-center pl-4"
                    >
                        <span class="text-18 text-[#C0C0C0]">Cytonic.com</span>
                    </div>
                </div>
            </div>
            <div class="px-[190px] pt-[42px] pb-[61px] flex flex-col gap-8">
                <div class="flex flex-col gap-2 font-medium">
                    <span class="text-black text-[24px]">
                        Hi, I will help you create a crypto project on Cytonic
                    </span>
                    <span class="text-[#C0C0C0] text-[14px] flex gap-2">
                        <Clock />
                        <p>Estimated build time: 3 minutes</p>
                    </span>
                </div>

                <div class="flex flex-col gap-4">
                    <p
                        class="text-[#C0C0C0] text-[14px] font-medium leading-[120%]"
                    >
                        Choose one of the most common prompts<br /> below or use
                        your own to begin
                    </p>
                    <div class="flex gap-4">
                        <div
                            class="w-[173px] h-[123px] p-4 rounded-[16px] border-light-gray border-1 flex flex-col justify-between"
                        >
                            <p class="text-[14px] font-medium leading-[120%]">
                                Build a memecoin launchpad
                            </p>
                            <div class="text-[24px] leading-[100%]">üê∂</div>
                        </div>

                        <div
                            class="w-[173px] h-[123px] p-4 rounded-[16px] border-light-gray border-1 flex flex-col justify-between"
                        >
                            <p class="text-[14px] font-medium leading-[120%]">
                                Build a new stablecoin protocol
                            </p>
                            <div class="text-[24px] leading-[100%]">üè¶</div>
                        </div>

                        <div
                            class="w-[173px] h-[123px] p-4 rounded-[16px] border-light-gray border-1 flex flex-col justify-between"
                        >
                            <p class="text-[14px] font-medium leading-[120%]">
                                Create a RWA marketplace on Cytonic
                            </p>
                            <div class="text-[24px] leading-[100%]">üåê</div>
                        </div>

                        <div
                            class="w-[173px] h-[123px] p-4 rounded-[16px] border-light-gray border-1 flex flex-col justify-between"
                        >
                            <p class="text-[14px] font-medium leading-[120%]">
                                Ship a token dashboard
                            </p>
                            <div class="text-[24px] leading-[100%]">üìä</div>
                        </div>
                    </div>

                    <div
                        class="border-light-gray border-1 bg-[#F5F5F5] h-[104px] rounded-[16px] pt-4 pb-2 pl-4 pr-2 justify-between flex flex-col"
                    >
                        <p class="text-[#818181] text-[14px]">
                            Ask whatever you want...
                        </p>

                        <div class="flex justify-between">
                            <div class="flex gap-6">
                                <span class="flex gap-2 items-center">
                                    <Paperclip />
                                    <p class="text-[14px] text-[#C0C0C0]">
                                        Add attachment
                                    </p>
                                </span>
                                <span class="flex gap-2 items-center">
                                    <Image />
                                    <p class="text-[14px] text-[#C0C0C0]">
                                        Use image
                                    </p>
                                </span>
                            </div>
                            <div
                                class="bg-black w-10 h-10 rounded-[8px] flex items-center justify-center rotate-180"
                            >
                                <Arrow color={"white"} />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
